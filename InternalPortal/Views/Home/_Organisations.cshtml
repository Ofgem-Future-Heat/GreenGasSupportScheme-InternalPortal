@model InternalPortal.ViewModels.Organisations

<h2 class="govuk-heading-m">
    Unverified organisations
</h2>
<table class="govuk-table" data-module="moj-sortable-table">
    <thead class="govuk-table__head">
        <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header" aria-sort="descending">Organisation</th>
            <th scope="col" class="govuk-table__header" aria-sort="none">Last updated</th>
            <th scope="col" class="govuk-table__header" aria-sort="none">Status</th>
        </tr>
    </thead>
    <tbody class="govuk-table__body">
        @foreach (var organisation in Model.List.Where(o => o.Status == "Not verified"))
        {
            <tr class="govuk-table__row">
                <td class="govuk-table__cell">
                    <a href="/organisation-details/@organisation.Id">
                        @(string.IsNullOrEmpty(organisation.Name) ? "Unnamed" : organisation.Name)
                    </a>
                </td>
                <td class="govuk-table__cell">
                    @organisation.LastModified
                </td>
                <td class="govuk-table__cell"><strong class="govuk-tag govuk-tag--grey">@organisation.Status</strong></td>
            </tr>
        }
    </tbody>
</table>
